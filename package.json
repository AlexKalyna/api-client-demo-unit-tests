{
  "name": "api-client-demo-unit-tests",
  "version": "1.0.0",
  "description": "Demo project showcasing unit testing skills with Vitest, Axios, retry logic, and circuit breaker patterns",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "dev": "vitest --watch",
    "quality": "npm run type-check && npm run lint && npm run format:check && npm run test:run",
    "quality:fix": "npm run lint:fix && npm run format",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "prepare": "husky install"
  },
  "keywords": [
    "vitest",
    "axios",
    "unit-testing",
    "typescript",
    "retry-logic",
    "circuit-breaker",
    "async-testing",
    "mocking"
  ],
  "author": "Senior Automation QA Engineer",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
